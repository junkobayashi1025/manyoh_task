<!DOCTYPE html>
<html>
  <head>
    <title>ManyohTask</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'header' %>
    <div class="container">
      <% if flash[:notice] %>
        <p class="alert alert-primary"><%= flash[:notice] %></p>
      <% end %>
      <% if flash[:success] %>
        <p class="alert alert-success"><%= flash[:success] %></p>
      <% end %>
      <% if flash[:danger] %>
        <p class="alert alert-danger"><%= flash[:danger] %></p>
      <% end %>
    <%= yield %>
    </div>
  </body>
</html>

<h1>Tasks#index</h1>
<%= link_to 'new', new_task_path, class: 'btn btn-primary'%>

<ul>
    <%= form_with(url: tasks_path, method: :get, local: true) do |f|%>
    <%= f.label :title, 'タスク名' %>
    <%= f.text_field :title, placeholder:"検索.."%>
    <%= f.label :status, 'ステータス'%>
    <%= f.select :status, Task.statuses.keys, include_blank: true %>
    <%= f.submit 'Search' %>
    <%= link_to 'Clear', tasks_path %>
    <% end %>
</ul>


<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>id</th>
      <th>title</th>
      <th>content</th>
      <th><%= link_to "終了期限", tasks_path(sort_expired: "true") %></th>
      <th>status</th>
      <th><%= link_to "優先度", tasks_path(sort_priority: "true") %></th>
      <th>create_date</th>
      <th></th>
      <th></th>
   </tr>
 </thead>
 <tbody>
   <% @tasks.each do |task| %>
     <tr>
       <td><%= task.id %></td>
       <td><%= link_to task.title, task %></td>
       <td><%= task.content %></td>
       <td><%= task.deadline %></td>
       <td><%= task.status %></td>
       <td><%= task.priority %></td>
       <td><%= task.created_at.to_s(:datetime_jp) %></td>
       <td><%= link_to 'edit', edit_task_path(task), class: 'btn btn-primary mr-3'%></td>
       <td><%= link_to 'delete', task, method: :delete, date: { confirm: "タスク「#{task.title}を削除します。よろしいでしょうか？」"}, class: 'btn btn-danger mr-3'%></td>
     </tr>
   <% end %>
 </tbody>
</table>

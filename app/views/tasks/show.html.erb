<h1>Tasks#show</h1>
<h1>Tasks#index</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>title</th>
      <th>content</th>
      <th>deadlline</th>
      <th>status</th>
      <th>priority</th>
      <th></th>
      <th></th>
   </tr>
 </thead>
 <tbody>
   <% @task.each do |t| %>
     <tr>
       <td><%= t.title %></td>
       <td><%= t.content %></td>
       <td><%= t.deadline %></td>
       <td><%= t.status %></td>
       <td><%= t.priority %></td>
       <td><%= t.created_at.to_s(:datetime_jp) %></td>
       <td><%= t.updated_at.to_s(:datetime_jp) %></td>
     </tr>
   <% end %>
 </tbody>
</table>
<%= link_to 'new', new_task_path, class: 'btn btn-primary'%>
<%= link_to 'edit', edit_task_path(@task), class: "btn btn-outline-dark" %>
